mixin worktime(cl,list,org)
    if list
        .worktime(class= cl)
            .worktime__item
                span Понедельник
                |09:00 - 18:00
            .worktime__item
                span Вторник
                |09:00 - 18:00
            .worktime__item
                span Среда
                |09:00 - 18:00
            .worktime__item.worktime__item_active
                span Четверг
                |09:00 - 18:00
            .worktime__item
                span Пятница
                |09:00 - 18:00
            .worktime__item
                span Суббота
                |10:00 - 16:00
            .worktime__item
                span Воскресенье
                |10:00 - 16:00
    else if org
        .worktime(class= cl)
            .worktime__item ИНН: 00000000000
            .worktime__item ОГРН: 000000000000
    else
        .worktime(class= cl)
            .worktime__item
                span Пн-Пт
                |09:00 - 18:00
            .worktime__item
                span Сб-Вс
                |10:00 - 16:00
        